{% extends "TohouriStoreBundle::layout.html.twig" %}

{% block title %}Category{% endblock %}

{% block body %}

<h1>Category</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ category.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ category.name }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('TohouriStoreBundle_category') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('TohouriStoreBundle_category_edit', { 'id': category.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('TohouriStoreBundle_category_delete', { 'id': category.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}