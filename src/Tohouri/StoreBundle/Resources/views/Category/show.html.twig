{% extends "TohouriStoreBundle::layout.html.twig" %}

{% block title %}Category{% endblock %}

{% block body %}

<fieldset> 
     <legend align="center"><h1>{{ "categorie" | trans }}</h1></legend>

<table class="record_properties">
    <tbody>
        <tr>
            <th>{{ "id" | trans }}</th>
            <td>{{ category.id }}</td>
        </tr>
        <tr>
            <th>{{ "name" | trans }}</th>
            <td>{{ category.name }}</td>
        </tr>
    </tbody>
</table>
<div>&nbsp;</div>
        <div align="center">        
		<form action="{{ path('TohouriStoreBundle_category_edit', { 'id': category.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">{{ "editer" | trans }}</button>
            
          
		   
		           <form action="{{ path('TohouriStoreBundle_category_delete', { 'id': category.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">{{ "supprimer" | trans }}</button>
        </form>
		
		</div>
		
</fieldset>

<ul class="record_actions">
    <li>
        <a href="{{ path('TohouriStoreBundle_category') }}">
            <button type="submit">{{ "retour" | trans }}</button>
        </a>
    </li>

</ul>
{% endblock %}