{% extends '::base.html.twig' %}

{% block title %}Ajouter une nouvelle catégorie{% endblock %}

{% block body %}

<h1>Ajouter une nouvelle catégorie</h1>

{% if app.session.hasFlash('notice') %}
<div class="flash-notice">
{{ app.session.flash('notice') }}	
</div>
{% endif %}

<form action="{{ path('TohouriStoreBundle_category_new') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Create</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('TohouriStoreBundle_category') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}