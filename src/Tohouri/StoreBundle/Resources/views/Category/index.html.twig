{% extends '::base.html.twig' %}

{% block title %}Liste des Categories{% endblock %}

{% block body %}

<h1>Liste des Categories</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for category in categories %}
        <tr>
            <td><a href="{{ path('TohouriStoreBundle_category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
            <td>{{ category.name }}</td>
            <td>{{ category.description }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('TohouriStoreBundle_category_show', { 'id': category.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('TohouriStoreBundle_category_edit', { 'id': category.id }) }}">edit</a>
                    </li>
					<li>
                        <a href="{{ path('TohouriStoreBundle_category_member', { 'id': category.id }) }}">Outils de la cat√©gorie</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('TohouriStoreBundle_category_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}