{% extends "TohouriStoreBundle::layout.html.twig" %}

{% block title %}Liste des Categories{% endblock %}

{% block body %}

<fieldset> 
     <legend align="center"><h1>{{ "liste_categorie" | trans }}</h1></legend>

<table class="records_list">
    <thead>
        <tr>
            <th>{{ "id" | trans }}</th>
            <th>{{ "name" | trans }}</th>
            <th>{{ "description" | trans }}</th>
            <th>{{ "action" | trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for category in categories %}
        <tr>
            <td><a href="{{ path('TohouriStoreBundle_category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
            <td>{{ category.name }}</td>
            <td>{{ category.description }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('TohouriStoreBundle_category_show', { 'id': category.id }) }}">{{ "montrer" | trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('TohouriStoreBundle_category_edit', { 'id': category.id }) }}">{{ "editer" | trans }}</a>
                    </li>
					<li>
                        <a href="{{ path('TohouriStoreBundle_category_member', { 'id': category.id }) }}">{{ "outil_categorie" | trans }}</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</fieldset>

<ul>
    <li>
        <a href="{{ path('TohouriStoreBundle_category_new') }}">
             <button type="submit">{{ "creer_entite" | trans }}</button>
        </a>
    </li>
</ul>
{% endblock %}