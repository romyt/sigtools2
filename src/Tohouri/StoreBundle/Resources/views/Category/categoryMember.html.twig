{% extends '::base.html.twig' %}

{% block title %} Produits de la Categorie {{ category.name }} {% endblock %}

{% block body %}

<h1>Produits de la Categorie {{ category.name }}</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th>
            <th>Description</th>
            <th>Quantite</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td><a href="{{ path('TohouriStoreBundle_product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
            <td>{{ product.name }}</td>
            <td>{{ product.code }}</td>
            <td>{{ product.description }}</td>
            <td>{{ product.stock.quantity }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('TohouriStoreBundle_product_show', { 'id': product.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('TohouriStoreBundle_product_edit', { 'id': product.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('TohouriStoreBundle_category_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}