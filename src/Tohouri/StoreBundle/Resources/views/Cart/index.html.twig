{% extends "TohouriStoreBundle::layout.html.twig" %}
{% block head %}
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('bundles/tohouristore/css/layout.css') }}" type="text/css" media="all" />
		{% endblock %}
	{% block assets %}
	  {# <link rel="stylesheet" href="{{ asset('bundles/tohouristore/css/cart.css') }}" type="text/css" media="all" /> #}
	  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript"></script>
	  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js" type="text/javascript"></script>
	  <script src="{{ asset("bundles/tohouristore/js/cart.js") }}" type="text/javascript"></script>
	{% endblock %}
 
	{% block title %}
		{{ parent() }}
		- Préparation de Commande
	{% endblock %}
{% endblock %}
{% block sub_menue %}
<ul id="menu">
	<li><a href="{{ path('TohouriStoreBundle_shipping') }}">boite d'envoie</a></li>
	<li>Boite de reception</li>
	<li>Accusés reception</li>
</ul>
{% endblock sub_menue %}
{% block body %}

<h1>Entrepôt d'outil de collecte</h1>

<div id="shopping_cart">
  <h2>Passer une commande:</h2>

  <div id="product_list">

		<form action="{{ path('TohouriStoreBundle_cart_add') }}" method="post" {{ form_enctype(form1) }}>
    	{{ form_widget(form1) }}
	 		<p>
	        	<button type="submit">Ajouter a la commande</button>
	    	</p>
		</form>		   
  </div>

  <h2>Panier:</h2>
  
  <div id="wastebin" style="float:right">
    <a title="Remove this item" href="{{ path('TohouriStoreBundle_cart_removeAll') }}">
		<img id="wastebin" src="{{ asset('bundles/tohouristore/images/trash.png') }}" alt="Supprimer tout" />
	</a>
  </div>
  <div id="cart" class="cart">
    <div id="items">
      {% include 'TohouriStoreBundle:Cart:cart.html.twig' with {'cart': cart, 'products': products, 'form2': form2} %}
    </div>
    <div style="clear: both"></div>
  </div>

</div>
{% endblock body %}