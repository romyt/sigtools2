{% extends "::base.html.twig" %}

{% block assets %}
  <link rel="stylesheet" href="{{ asset("/css/cart.css") }}" />
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js" type="text/javascript"></script>
  <script src="{{ asset("/js/cart.js") }}" type="text/javascript"></script>
{% endblock %}

{% block title %}Symfony2 store demo{% endblock %}

{% block body %}

<h1>Entrep√¥t d'outil de collecte</h1>

<div id="shopping_cart">
  <h2>Passer une commande:</h2>

  <div id="product_list">

		<form action="{{ path('TohouriStoreBundle_cart_add') }}" method="post" {{ form_enctype(form) }}>
    	{{ form_widget(form) }}
	 		<p>
	        	<button type="submit">Ajouter a la commande</button>
	    	</p>
		</form>		   
  </div>

  <h2>Panier:</h2>
  
  <div id="wastebin" style="float:right">
    <img id="wastebin" src="{{ asset('@TohouriBundle/Resources/public/images/trash.png') }}" alt="" />
  </div>


  <div id="cart" class="cart">
    <div id="items">
      {% include 'TohouriStoreBundle:Cart:cart.html.twig' with {'cart': cart, 'products': products} %}
    </div>
    <div style="clear: both"></div>
  </div>


</div>
{% endblock %}