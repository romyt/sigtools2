{% extends "TohouriStoreBundle::layout.html.twig" %}

{% block title %}Modifier le stock{% endblock %}

{% block body %}

<fieldset> 
     <legend align="center"><h1>{{ "inventaire" | trans }}</h1></legend>
	 
	             {% if app.session.flash('notice') %}
                <div class="flash-message">
                   <h6 font-color="red"> <em>Notice</em>: {{ app.session.flash('notice') }}</h6>
                </div>
            {% endif %}

<div align="center">
<form action="{{ path('TohouriStoreBundle_stock_update', { 'id': stock.id }) }}" method="post" {{ form_enctype(edit_form) }}>
   
   <table class="tabledim">
      
	 <div align="center"> 
	  <tr class="couleur">
        <td class="couleur">{{ form_label(edit_form.quantity) }}</td>
		<td class="couleur">{{ form_errors(edit_form.quantity) }}
                            {{ form_widget(edit_form.quantity) }}
	    </td>
	  </tr>
	  <tr class="couleur">
        <td class="couleur">{{ form_label(edit_form.product) }}</td>
        <td class="couleur">{{ form_errors(edit_form.product) }}
                            {{ form_widget(edit_form.product) }}
		</td>
	  </tr>
  </table>
  
       {{ form_rest(edit_form) }}
    <p>
        <button type="submit">{{ "editer" | trans }}</button>
    </p>
</form>
</div>
</fieldset>

<ul class="record_actions">
    <li>
        <a href="{{ path('TohouriStoreBundle_stock') }}">
            <button type="submit">{{ "retour" | trans }}</button>
        </a>
    </li>
  
</ul>
{% endblock %}