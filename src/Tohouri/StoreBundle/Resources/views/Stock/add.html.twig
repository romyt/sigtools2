{% extends "TohouriStoreBundle::layout.html.twig" %}

{% block title %}RÃ©ceptionner un nouveau stock{% endblock %}

{% block body %}

<fieldset> 
     <legend align="center"><h1>{{ "ajouter_stock" | trans }}</h1></legend>

            {% if app.session.flash('notice') %}
                <div class="flash-message">
                   <h6 font-color="red"> <em>Notice</em>: {{ app.session.flash('notice') }}</h6>
                </div>
            {% endif %}

<div align="center">
<form action="{{ path('TohouriStoreBundle_stock_add') }}" method="post" {{ form_enctype(form) }}>
   
   <table class="tabledim">
      
	 <div align="center"> 
	  <tr class="couleur">
        <td class="couleur">{{ form_label(form.quantity) }}</td>
		<td class="couleur">{{ form_errors(form.quantity) }}
                            {{ form_widget(form.quantity) }}
	    </td>
	  </tr>
	  <tr class="couleur">
        <td class="couleur">{{ form_label(form.product) }}</td>
        <td class="couleur">{{ form_errors(form.product) }}
                            {{ form_widget(form.product) }}
		</td>
	  </tr>
  </table>
  
       {{ form_rest(form) }}
    <p>
        <button type="submit">{{ "creer_entite" | trans }}</button>
    </p>
</form>
</div>

</fieldset>
<ul class="record_actions">
    <li>
        <a href="{{ path('TohouriStoreBundle_stock', {'quantity': stock.quantity}) }}">
            <button type="submit">{{ "retour" | trans }}</button>
        </a>
    </li>
</ul>
{% endblock %}