{% extends "TohouriStoreBundle::layout.html.twig" %}

{% block title %}Liste des stocks disponibles{% endblock %}

{% block body %}

<h1>Liste des stocks disponibles</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantite</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for stock in stocks %}
        <tr class>
            <td><a href="{{ path('TohouriStoreBundle_product_show', { 'id': stock.product.id }) }}">{{ stock.product }}</a></td>
            <td>{{ stock.quantity }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('TohouriStoreBundle_stock_show', { 'id': stock.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('TohouriStoreBundle_stock_edit', { 'id': stock.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('TohouriStoreBundle_stock_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}