{% extends "TohouriStoreBundle::layout.html.twig" %}

{% block title %}Liste des produits{% endblock %}

{% block body %}

<fieldset> 
     <legend align="center"><h1>{{ "list_produit" | trans }}</h1></legend>

	 
	             {% if app.session.flash('notice') %}
                <div class="flash-message">
                   <h6 font-color="red"> <em>Notice</em>: {{ app.session.flash('notice') }}</h6>
                </div>
            {% endif %}

<table class="records_list">
    <thead>
        <tr>
            <th>{{ "id" | trans }}</th>
            <th>{{ "name" | trans }}</th>
            <th>{{ "code" | trans }}</th>
            <th>{{ "description" | trans }}</th>
            <th>{{ "price" | trans }}</th>
            <th>{{ "action" | trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td><a href="{{ path('TohouriStoreBundle_product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
            <td>{{ product.name }}</td>
            <td>{{ product.code }}</td>
            <td>{{ product.description }}</td>
            <td>{{ product.price }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('TohouriStoreBundle_product_show', { 'id': product.id }) }}">{{ "montrer" | trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('TohouriStoreBundle_product_edit', { 'id': product.id }) }}">{{ "editer" | trans }}</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</fieldset>

<ul>
    <li>
        <a href="{{ path('TohouriStoreBundle_product_new') }}">
            <button type="submit">{{ "creer_entite" | trans }}</button>
        </a>
    </li>
</ul>
{% endblock %}