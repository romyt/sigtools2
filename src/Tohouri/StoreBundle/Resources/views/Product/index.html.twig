{% extends "TohouriStoreBundle::layout.html.twig" %}

{% block title %}Liste des produits{% endblock %}

{% block body %}

<h1>Liste des produits</h1>

{% if app.session.hasFlash('notice') %}
<div class="flash-notice">
{{ app.session.flash('notice') }}	
</div>
{% endif %}

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th>
            <th>Description</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td><a href="{{ path('TohouriStoreBundle_product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
            <td>{{ product.name }}</td>
            <td>{{ product.code }}</td>
            <td>{{ product.description }}</td>
            <td>{{ product.price }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('TohouriStoreBundle_product_show', { 'id': product.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('TohouriStoreBundle_product_edit', { 'id': product.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('TohouriStoreBundle_product_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}