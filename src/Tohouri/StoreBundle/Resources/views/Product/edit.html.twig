{% extends "TohouriStoreBundle::layout.html.twig" %}

{% block title %}Editer un produit{% endblock %}

{% block body %}

<fieldset> 
     <legend align="center"><h1>{{ "editer_produit" | trans }}</h1></legend>
	 
	 
	             {% if app.session.flash('notice') %}
                <div class="flash-message">
                   <h6 font-color="red"> <em>Notice</em>: {{ app.session.flash('notice') }}</h6>
                </div>
            {% endif %}

<div align="center">
<form action="{{ path('TohouriStoreBundle_product_update', { 'id': product.id }) }}" method="post" {{ form_enctype(edit_form) }}>
      <table class="tabledim">
      
	  <tr class="couleur">
        <td class="couleur">{{ form_label(edit_form.name) }}</td>
		<td class="couleur">{{ form_errors(edit_form.name) }}
                            {{ form_widget(edit_form.name) }}
	    </td>
	  </tr>
	  <tr class="couleur">
        <td class="couleur">{{ form_label(edit_form.code) }}</td>
        <td class="couleur">{{ form_errors(edit_form.code) }}
                            {{ form_widget(edit_form.code) }}
		</td>
	  </tr>
	  <tr class="couleur">
        <td class="couleur">{{ form_label(edit_form.description) }}</td>
		<td class="couleur">{{ form_errors(edit_form.description) }}
                            {{ form_widget(edit_form.description) }}
	    </td>
	  </tr>
	  </tr>
	  <tr class="couleur">
        <td class="couleur">{{ form_label(edit_form.price) }}</td>
		<td class="couleur">{{ form_errors(edit_form.price) }}
                            {{ form_widget(edit_form.price) }}
	    </td>
	  </tr>
	   <tr class="couleur">
        <td class="couleur">{{ form_label(edit_form.category) }}</td>
		<td class="couleur">{{ form_errors(edit_form.category) }}
                            {{ form_widget(edit_form.category) }}
	    </td>
	  </tr>
  </table>
  
        {{ form_rest(edit_form) }}
   
        <button type="submit">{{ "editer" | trans }}</button>
    
            <form action="{{ path('TohouriStoreBundle_product_delete', { 'id': product.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">{{ "supprimer" | trans }}</button>
        </form>
</form>
</div>

</fieldset>

<ul class="record_actions">
    <li>
        <a href="{{ path('TohouriStoreBundle_product') }}">
            <button type="submit">{{ "retour" | trans }}</button>
        </a>
		<div align="right"><a href="{{ path('TohouriStoreBundle_product_show', { 'id': product.id }) }}">
                        <button type="submit">{{ "reout_liste" | trans }}</button>
        </a>
		</div>
    </li>
</ul>
{% endblock %}