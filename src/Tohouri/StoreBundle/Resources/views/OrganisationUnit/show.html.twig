{% extends "TohouriStoreBundle::layout.html.twig" %}

{% block title %} Liste des Etablissements sanitaires {% endblock %}

{% block body %}

<fieldset> 
     <legend align="center"><h1>{{ "orgaunit" | trans }}{{ entity.name }}</h1></legend>
	             {% if app.session.flash('notice') %}
                <div class="flash-message">
                   <h6 font-color="red"> <em>Notice</em>: {{ app.session.flash('notice') }}</h6>
                </div>
            {% endif %}

<table class="record_properties">
    <tbody>
        <tr>
            <th>{{ "name" | trans }}: </th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{{ "adresse" | trans }}: </th>
            <td>{{ entity.address }}</td>
        </tr>
    </tbody>
</table>
     
     <div align="center">  

  <ul class="record_actions">   
    <li>
       
        <a href="{{ path('TohouriStoreBundle_orgunit_edit', { 'id': entity.id }) }}">
            <button type="submit">{{ "editer" | trans }}</button>
        </a>
    
               <form action="{{ path('TohouriStoreBundle_orgunit_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }} 
            <button type="submit">{{ "supprimer" | trans }}</button>
        </form>
    </li>
</ul>
      </div>
</fieldset>

<div>
     <ul class="record_actions">   
    <li>
            <a href="{{ path('TohouriStoreBundle_orgunit') }}">
            <button type="submit">{{ "retour" | trans }}</button>
        </a>
    </li>
    </ul>    

</div>
{% endblock %}