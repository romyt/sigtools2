{% extends "TohouriStoreBundle::layout.html.twig" %}

{% block title %}Etablissement{% endblock %}

{% block body %}


<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ entity.address }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('TohouriStoreBundle_orgunit') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('TohouriStoreBundle_orgunit_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('TohouriStoreBundle_orgunit_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}