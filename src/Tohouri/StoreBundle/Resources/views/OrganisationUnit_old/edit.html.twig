{% extends "TohouriStoreBundle::layout.html.twig" %}

{% block title %} Modifier un Etablissement sanitaire {% endblock %}

{% block body %}

<h1>OrganisationUnit edit</h1>

<form action="{{ path('TohouriStoreBundle_orgunit_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('TohouriStoreBundle_orgunit') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('TohouriStoreBundle_orgunit_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}